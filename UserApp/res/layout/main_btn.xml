    <Button
        android:id="@+id/btn_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_open"
        android:layout_alignBottom="@+id/btn_open"
        android:layout_marginRight="24dp"
        android:layout_toLeftOf="@+id/btn_open"
        android:background="@drawable/picture"
        android:onClick="mOnClick" />

    <Button
        android:id="@+id/btn_emergency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_message"
        android:layout_alignBottom="@+id/btn_message"
        android:layout_alignLeft="@+id/btn_picture"
        android:background="@drawable/emer"
        android:onClick="mOnClick" />

    <Button
        android:id="@+id/btn_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_open"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="34dp"
        android:background="@drawable/message"
        android:onClick="mOnClick" />

    <Button
        android:id="@+id/btn_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_message"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="19dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/open"
        android:onClick="mOnClick" />

    <ImageButton
        android:id="@+id/btn_logo"
        android:onClick="mOnClick"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="@drawable/ear"
        android:maxHeight="150dp"
        android:maxWidth="150dp" />

</RelativeLayout>
